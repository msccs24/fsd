Q1
const http = require('http');

// HTML form content
const htmlForm = `
  <html>
    <head><title>Concatenate Strings</title></head>
    <body>
      <h2>Enter Two Strings</h2>
      <form method="POST">
        String 1: <input type="text" name="str1"><br><br>
        String 2: <input type="text" name="str2"><br><br>
        <input type="submit" value="Concatenate">
      </form>
    </body>
  </html>
`;

const server = http.createServer((req, res) => {
  if (req.method === 'GET') {
    // Show the form
    res.writeHead(200, { 'Content-Type': 'text/html' });
    res.end(htmlForm);
  }

  if (req.method === 'POST') {
    let body = '';
    req.on('data', chunk => body += chunk.toString());
    req.on('end', () => {
      const params = new URLSearchParams(body);
      const str1 = params.get('str1') || '';
      const str2 = params.get('str2') || '';
      const result = str1 + str2;

      // Show result
      res.writeHead(200, { 'Content-Type': 'text/html' });
      res.end(`
        <h2>Result: ${result}</h2>
        <a href="/">Try Again</a>
      `);
    });
  }
});

server.listen(3000, () => {
  console.log('âœ… Server running at http://localhost:3000');
});


Q2
const http=require('http');
const fs=require('fs');

const port=3000;
http.createServer((req,res) => 
{
	const filePath='./file1.txt';
	console.log(`Request for File :${filePath}`);
	
	fs.readFile(filePath,(err,data) =>
	{
		if(err)
		{
			res.writeHead(404,{'Content-Type':'text/plain'});
			res.end("404 error : FIle not Found");
		}
		else
		{
			res.writeHead(200,{'Content-type':'text/plain'});
			res.end(data);
		}
	});
}).listen(port,() => {
	console.log(`Server running at http://localhost:${port}`);
});
